<wxs src="../../wxs/price.wxs" module="p"></wxs>
<view class="container">
    <image class="img" src="{{data.img}}"></image>
    <view class="content-container">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}">
                <l-tag l-class="l-tag">{{item}}</l-tag>
            </block>
        </view>
        <l-price value="{{p.mainPrice(data.price,data.discount_price).price}}"></l-price>
        <l-price
                wx:if="{{p.slashedPrice(data.price,data.discount_price).display}}"
                deleted
                value="{{p.slashedPrice(data.price,data.discount_price).price}}"></l-price>
        <text>{{data.subtitle}}</text>
    </view>
</view>
